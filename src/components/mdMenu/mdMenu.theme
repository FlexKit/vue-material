.THEME_NAME {
  &.md-menu-content{
    background-color: #{'BACKGROUND-COLOR'};
    color: #{'BACKGROUND-CONTRAST'};

    .md-list {
      .md-menu-item {
        &:hover,
        &:focus,
        &.md-highlighted {
          .md-button:not([disabled]) {
            background-color: #{'BACKGROUND-CONTRAST-0.04'};
          }
        }

        &[disabled] {
          color: #{'BACKGROUND-CONTRAST-0.38'};
        }
      }
    }
  }
}
