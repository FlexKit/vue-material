.THEME_NAME {
  &.md-input-container {
    .md-field {
      &:after {
        background-color: #{'BACKGROUND-CONTRAST-0.12'};
      }
    }

    label,
    .md-icon {
      color: #{'BACKGROUND-CONTRAST-0.54'};
    }

    input,
    textarea {
      &, &::-webkit-input-placeholder {
        // color: #{'BACKGROUND-CONTRAST-0.54'};
      }
    }

    &.md-input-invalid {
      .md-field:after {
        background-color: #{'WARN-COLOR'};
      }

      label,
      input,
      textarea,
      .md-error,
      .md-count,
      .md-icon {
        color: #{'WARN-COLOR'};
      }
    }

    &.md-input-focused {
      &.md-input-required {
        label:after {
          color: #{'WARN-COLOR'};
        }
      }

      .md-field:before {
        background-color: #{'PRIMARY-COLOR'};
      }

      input,
      textarea {
        color: #{'PRIMARY-COLOR'};
        text-shadow: 0 0 0 #{'BACKGROUND-CONTRAST'};
        -webkit-text-fill-color: transparent;
      }

      label,
      .md-icon {
        color: #{'PRIMARY-COLOR'};
      }
    }

    &.md-has-value {
      input,
      textarea,
      .md-field {
        // color: #{'BACKGROUND-CONTRAST-0.87'};
      }
    }

    &.md-input-disabled {
      .md-field:after {
        background-color: transparent;
        background-image: linear-gradient(to right, #{'BACKGROUND-CONTRAST-0.38'} 0%, #{'BACKGROUND-CONTRAST-0.38'} 33%, transparent 0%);
      }

      label,
      input,
      textarea,
      .md-error,
      .md-count,
      .md-icon,
      ::-webkit-input-placeholder {
        color: #{'BACKGROUND-CONTRAST-0.38'};
      }
    }

    &.md-has-password {
      &.md-input-focused .md-toggle-password {
        color: #{'BACKGROUND-CONTRAST-0.54'};
      }

      .md-toggle-password {
        color: #{'BACKGROUND-CONTRAST-0.38'};

        .md-ink-ripple {
          color: #{'BACKGROUND-CONTRAST-0.87'};
        }
      }
    }

    &.md-clearable {
      &.md-input-focused .md-clear-input {
        color: #{'BACKGROUND-CONTRAST-0.54'};
      }

      .md-clear-input {
        color: #{'BACKGROUND-CONTRAST-0.38'};

        .md-ink-ripple {
          color: #{'BACKGROUND-CONTRAST-0.87'};
        }
      }
    }

    &.md-has-select:hover {
      .md-select:not(.md-disabled) {
        color: #{'BACKGROUND-CONTRAST-0.54'};

        .md-field:after {
          color: #{'BACKGROUND-CONTRAST-0.87'};
        }
      }
    }
  }
}
